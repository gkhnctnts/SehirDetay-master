@model SehirDetay.Models.KullaniciRol

@{
    ViewBag.Title = "Kullanıcıya Rol Ata";
    Layout = "~/Views/Shared/Yonetici.cshtml";
}

<h2>Kullanıcıya Rol Ata</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Kullanici</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
         @Html.HiddenFor(model => model.KullaniciId)


        <div class="form-group">
            @Html.LabelFor(model => model.RolId, "Rol", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RolId, (SelectList)ViewBag.Rol , htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RolId, "", new { @class = "text-danger" })
            </div>
        </div>
 

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
